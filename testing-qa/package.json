{
  "name": "globaltaxcalc-testing-qa",
  "version": "1.0.0",
  "description": "Comprehensive testing and quality assurance for GlobalTaxCalc platform",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:performance": "k6 run tests/performance/**/*.js",
    "test:security": "npm run test:security:owasp && npm run test:security:snyk",
    "test:security:owasp": "zap-baseline.py -t http://localhost:3000",
    "test:security:snyk": "snyk test",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:performance",
    "test:ci": "npm run test:coverage && npm run test:e2e && npm run test:security",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "docker:test": "docker-compose -f docker-compose.test.yml up --build --abort-on-container-exit",
    "docker:test:clean": "docker-compose -f docker-compose.test.yml down -v",
    "setup:test-env": "node scripts/setup-test-environment.js",
    "generate:test-data": "node scripts/generate-test-data.js",
    "report:merge": "mochawesome-merge tests/reports/*.json > tests/reports/merged-report.json",
    "report:generate": "marge tests/reports/merged-report.json --reportDir tests/reports/html",
    "accessibility:test": "pa11y-ci",
    "visual:test": "percy exec -- cypress run",
    "mutation:test": "stryker run",
    "smoke:test": "newman run tests/api/postman/smoke-tests.json",
    "contract:test": "pact-broker publish pacts --consumer-app-version=$npm_package_version"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "faker": "^5.5.3",
    "lodash": "^4.17.21",
    "moment": "^2.29.4"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "artillery": "^2.0.3",
    "axe-core": "^4.8.2",
    "cypress": "^13.6.0",
    "cypress-axe": "^1.5.0",
    "cypress-cucumber-preprocessor": "^4.3.1",
    "cypress-file-upload": "^5.0.8",
    "cypress-image-snapshot": "^4.0.1",
    "cypress-multi-reporters": "^1.6.4",
    "cypress-visual-regression": "^3.0.0",
    "docker-compose": "^0.24.2",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-cypress": "^2.15.1",
    "eslint-plugin-jest": "^27.6.0",
    "jest": "^29.7.0",
    "jest-circus": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-html-reporters": "^3.1.5",
    "jest-junit": "^16.0.0",
    "k6": "^0.47.0",
    "lighthouse": "^11.3.0",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.2.0",
    "newman": "^6.0.0",
    "nodemon": "^3.0.1",
    "nyc": "^15.1.0",
    "pa11y": "^8.0.0",
    "pa11y-ci": "^3.1.0",
    "pact": "^12.1.0",
    "percy-cypress": "^3.1.2",
    "playwright": "^1.40.0",
    "prettier": "^3.1.0",
    "snyk": "^1.1258.0",
    "stryker-cli": "^1.0.2",
    "supertest": "^6.3.3",
    "testcafe": "^3.4.0",
    "typescript": "^5.2.2",
    "wait-on": "^7.2.0",
    "webdriverio": "^8.24.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/config/jest.setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.{js,ts}",
      "<rootDir>/tests/**/*.spec.{js,ts}"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,ts}",
      "!src/**/*.d.ts",
      "!src/**/index.{js,ts}",
      "!src/**/*.stories.{js,ts}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "coverageReporters": [
      "text",
      "lcov",
      "html",
      "json"
    ],
    "reporters": [
      "default",
      [
        "jest-html-reporters",
        {
          "publicPath": "./tests/reports/html",
          "filename": "jest-report.html",
          "expand": true
        }
      ],
      [
        "jest-junit",
        {
          "outputDirectory": "./tests/reports",
          "outputName": "junit.xml"
        }
      ]
    ],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "^@tests/(.*)$": "<rootDir>/tests/$1"
    },
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "babel-jest"
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "testing",
    "quality-assurance",
    "integration-testing",
    "e2e-testing",
    "performance-testing",
    "security-testing",
    "automation"
  ],
  "author": "GlobalTaxCalc Team",
  "license": "MIT"
}