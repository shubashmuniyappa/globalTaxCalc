# Application Configuration
APP_NAME=GlobalTaxCalc File Processing Service
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# Server Configuration
HOST=localhost
PORT=8000
WORKERS=4

# Database Configuration
DATABASE_URL=postgresql+asyncpg://user:password@localhost/globaltaxcalc_files
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# File Storage Configuration
UPLOAD_DIRECTORY=./uploads
TEMP_DIRECTORY=./temp
MAX_FILE_SIZE=50MB
ALLOWED_EXTENSIONS=pdf,jpg,jpeg,png,tiff,tif
FILE_RETENTION_HOURS=24

# OCR Configuration
TESSERACT_PATH=/usr/bin/tesseract
TESSERACT_LANG=eng+fra+deu+spa
OCR_DPI=300
OCR_CONFIDENCE_THRESHOLD=60

# Security Configuration
SECRET_KEY=your-super-secret-key-here
ENCRYPTION_KEY=your-32-byte-encryption-key-here
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Virus Scanning Configuration
CLAMAV_ENABLED=true
CLAMAV_HOST=localhost
CLAMAV_PORT=3310
CLAMAV_TIMEOUT=30

# File Processing Configuration
MAX_CONCURRENT_JOBS=10
JOB_TIMEOUT_MINUTES=30
RETRY_ATTEMPTS=3
CLEANUP_INTERVAL_HOURS=1

# Form Recognition Configuration
FORM_CONFIDENCE_THRESHOLD=0.8
FIELD_CONFIDENCE_THRESHOLD=0.7
MIN_TEXT_LENGTH=2
MAX_TEXT_LENGTH=500

# Supported Countries and Forms
SUPPORTED_COUNTRIES=US,CA,UK,AU,DE,FR
US_FORMS=W-2,1099-MISC,1099-INT,1099-DIV,1040,1040EZ
CA_FORMS=T4,T4A,T5,T3,T1,T1-General
UK_FORMS=P60,P45,SA100,SA302
AU_FORMS=PAYG,Group Certificate

# Data Validation Configuration
AMOUNT_MIN=0.01
AMOUNT_MAX=999999999.99
DATE_MIN_YEAR=1900
DATE_MAX_YEAR=2030

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/file-processing.log
SENTRY_DSN=

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,https://globaltaxcalc.com
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
HEALTH_CHECK_ENABLED=true

# Compliance
GDPR_COMPLIANCE=true
AUTO_DELETE_FILES=true
AUDIT_LOGGING=true
PII_DETECTION=true

# External Services
TAX_CALCULATOR_API_URL=http://localhost:3001/api
NOTIFICATION_SERVICE_URL=http://localhost:3005/api
USER_SERVICE_URL=http://localhost:3002/api