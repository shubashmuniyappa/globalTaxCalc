# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=changeme
ELASTICSEARCH_SSL=false
ELASTICSEARCH_API_KEY=

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Service Configuration
NODE_ENV=development
PORT=3007
API_VERSION=v1

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/search-service.log

# Search Configuration
DEFAULT_SEARCH_SIZE=20
MAX_SEARCH_SIZE=100
SEARCH_TIMEOUT=5000
AUTOCOMPLETE_SIZE=10
SUGGESTION_SIZE=5

# Analytics Configuration
ENABLE_SEARCH_ANALYTICS=true
ANALYTICS_BATCH_SIZE=100
ANALYTICS_FLUSH_INTERVAL=30000

# Security Configuration
API_RATE_LIMIT=1000
SEARCH_RATE_LIMIT=100
JWT_SECRET=your-jwt-secret
CORS_ORIGIN=http://localhost:3000

# Content Processing
MAX_FILE_SIZE=50MB
SUPPORTED_FILE_TYPES=pdf,doc,docx,txt,html
CONTENT_EXTRACTION_TIMEOUT=30000

# Multi-language Support
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de,it,pt,ja,zh,ko,ar

# Performance
CACHE_TTL=3600
SEARCH_CACHE_SIZE=1000
INDEX_REFRESH_INTERVAL=1s
BULK_SIZE=1000

# Monitoring
HEALTH_CHECK_INTERVAL=30000
METRICS_INTERVAL=60000
ALERT_THRESHOLD_ERROR_RATE=0.05
ALERT_THRESHOLD_RESPONSE_TIME=1000

# External Services
CMS_API_URL=http://localhost:1337/api
TAX_ENGINE_URL=http://localhost:3002
ANALYTICS_SERVICE_URL=http://localhost:3005