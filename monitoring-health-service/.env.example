# Server Configuration
PORT=3004
NODE_ENV=development
HOST=localhost

# Service Information
SERVICE_NAME=monitoring-health-service
SERVICE_VERSION=1.0.0
ENVIRONMENT=development

# Prometheus Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
METRICS_PREFIX=globaltaxcalc
COLLECT_DEFAULT_METRICS=true
COLLECT_GC_METRICS=true

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_RETRIES=3
DEPENDENCY_CHECK_ENABLED=true

# Service Endpoints to Monitor
CALCULATION_SERVICE_URL=http://localhost:3001
COMPARISON_SERVICE_URL=http://localhost:3002
REPORT_SERVICE_URL=http://localhost:3003
USER_SERVICE_URL=http://localhost:3005

# Database Configuration (for health checks)
DATABASE_TYPE=mysql
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_NAME=globaltaxcalc
DATABASE_USER=monitoring_user
DATABASE_PASSWORD=monitoring_password
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis Configuration
REDIS_ENABLED=true
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Elasticsearch Configuration (for logs)
ELASTICSEARCH_ENABLED=false
ELASTICSEARCH_NODE=http://localhost:9200
ELASTICSEARCH_INDEX=globaltaxcalc-logs
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# Sentry Configuration
SENTRY_ENABLED=true
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development
SENTRY_RELEASE=1.0.0
SENTRY_SAMPLE_RATE=1.0
SENTRY_TRACES_SAMPLE_RATE=0.1

# Alerting Configuration
ALERTING_ENABLED=true
ALERT_EMAIL_ENABLED=true
ALERT_SLACK_ENABLED=true
ALERT_PAGERDUTY_ENABLED=false
ALERT_SMS_ENABLED=false

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=alerts@globaltaxcalc.com
SMTP_PASSWORD=your-email-password
ALERT_EMAIL_FROM=alerts@globaltaxcalc.com
ALERT_EMAIL_TO=admin@globaltaxcalc.com,ops@globaltaxcalc.com

# Slack Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_CHANNEL=#alerts
SLACK_USERNAME=GlobalTaxCalc Monitor
SLACK_EMOJI=:warning:

# PagerDuty Configuration
PAGERDUTY_INTEGRATION_KEY=your-pagerduty-integration-key
PAGERDUTY_ROUTING_KEY=your-routing-key

# Twilio Configuration (for SMS)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_FROM_PHONE=+1234567890
ALERT_SMS_TO=+1234567890,+0987654321

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14
LOG_DATE_PATTERN=YYYY-MM-DD
CONSOLE_LOG_ENABLED=true
FILE_LOG_ENABLED=true

# Performance Monitoring
APM_ENABLED=true
PERFORMANCE_BUDGET_P95=500
PERFORMANCE_BUDGET_P99=1000
ERROR_RATE_THRESHOLD=0.05
RESPONSE_TIME_ALERT_THRESHOLD=1000

# System Monitoring
SYSTEM_METRICS_ENABLED=true
CPU_THRESHOLD=80
MEMORY_THRESHOLD=85
DISK_THRESHOLD=90
NETWORK_MONITORING_ENABLED=true

# Business Metrics
BUSINESS_METRICS_ENABLED=true
REVENUE_TRACKING_ENABLED=true
USER_ACTIVITY_TRACKING_ENABLED=true
CONVERSION_TRACKING_ENABLED=true

# Security Configuration
API_KEY_REQUIRED=false
API_KEY=your-monitoring-api-key
CORS_ORIGINS=http://localhost:3000,https://globaltaxcalc.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=1000

# Dashboard Configuration
GRAFANA_URL=http://localhost:3000
GRAFANA_USERNAME=admin
GRAFANA_PASSWORD=admin
DASHBOARD_REFRESH_INTERVAL=5s

# Circuit Breaker Configuration
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60000
CIRCUIT_BREAKER_RESET_TIMEOUT=30000

# On-Call Configuration
ON_CALL_ENABLED=true
ON_CALL_SCHEDULE_TYPE=weekly
ON_CALL_PRIMARY=admin@globaltaxcalc.com
ON_CALL_SECONDARY=ops@globaltaxcalc.com
ON_CALL_ESCALATION_TIMEOUT=300