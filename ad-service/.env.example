# Server Configuration
PORT=3006
NODE_ENV=development
HOST=localhost

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/globaltaxcalc_ads
DB_NAME=globaltaxcalc_ads

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_SESSION_DB=2

# Authentication
JWT_SECRET=your_jwt_secret_key_for_ad_service
API_KEY=your_api_key_for_ad_service
ADMIN_SECRET=your_admin_secret_for_ad_service

# Google AdSense Configuration
GOOGLE_ADSENSE_CLIENT_ID=ca-pub-1234567890123456
GOOGLE_ADSENSE_SLOT_ID_BANNER=1234567890
GOOGLE_ADSENSE_SLOT_ID_NATIVE=0987654321
GOOGLE_ADSENSE_SLOT_ID_MOBILE=1122334455
GOOGLE_ADSENSE_API_KEY=your_google_adsense_api_key
GOOGLE_CLIENT_EMAIL=your-service-account@project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key_here\n-----END PRIVATE KEY-----"

# Media.net Configuration
MEDIANET_SITE_ID=your_medianet_site_id
MEDIANET_CUSTOMER_ID=your_medianet_customer_id
MEDIANET_API_KEY=your_medianet_api_key

# Direct Advertisers
DIRECT_ADVERTISERS_API_ENDPOINT=https://api.globaltaxcalc.com/advertisers
DIRECT_ADVERTISERS_SECRET=your_direct_advertisers_secret

# Ad Performance Settings
MIN_VIEWABILITY_THRESHOLD=0.5
MIN_CTR_THRESHOLD=0.01
MIN_RPM_THRESHOLD=1.0
PERFORMANCE_CHECK_INTERVAL=300000

# A/B Testing Configuration
AB_TEST_SAMPLE_SIZE=1000
AB_TEST_CONFIDENCE_LEVEL=0.95
AB_TEST_MIN_CONVERSION_RATE=0.01

# Revenue Optimization
REVENUE_OPTIMIZATION_ENABLED=true
AUTO_NETWORK_SWITCHING=true
FALLBACK_NETWORK_ENABLED=true

# Geographic Configuration
SUPPORTED_COUNTRIES=US,CA,UK,AU,DE,FR,JP,IN,BR,MX
HIGH_VALUE_COUNTRIES=US,CA,UK,AU,DE
DEFAULT_COUNTRY=US

# Ad Content Filtering
ADULT_CONTENT_FILTER=true
COMPETITOR_BLOCKING=true
BRAND_SAFETY_ENABLED=true
MIN_QUALITY_SCORE=7

# Performance Monitoring
CORE_WEB_VITALS_MONITORING=true
PAGE_SPEED_THRESHOLD=3000
AD_LOAD_TIMEOUT=5000
LAZY_LOADING_ENABLED=true

# Analytics
ANALYTICS_ENABLED=true
DETAILED_LOGGING=false
METRICS_RETENTION_DAYS=90

# CORS
CORS_ORIGINS=http://localhost:3000,https://globaltaxcalc.com,https://www.globaltaxcalc.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_STRICT_MAX=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/ad-service.log