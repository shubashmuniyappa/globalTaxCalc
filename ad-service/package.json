{
  "name": "globaltaxcalc-ad-service",
  "version": "1.0.0",
  "description": "Ad Management Service for GlobalTaxCalc with placement optimization and revenue tracking",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "node scripts/build-ad-templates.js",
    "migrate": "node scripts/migrate-ad-data.js",
    "seed": "node scripts/seed-ad-units.js"
  },
  "keywords": [
    "ad-management",
    "adsense",
    "revenue-optimization",
    "a-b-testing",
    "tax-calculator",
    "ad-networks"
  ],
  "author": "GlobalTaxCalc Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "express-rate-limit": "^7.1.5",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "mongoose": "^8.0.3",
    "redis": "^4.6.10",
    "ioredis": "^5.3.2",
    "bull": "^4.12.2",
    "node-cron": "^3.0.3",
    "axios": "^1.6.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "uuid": "^9.0.1",
    "geoip-lite": "^1.4.10",
    "ua-parser-js": "^1.0.37",
    "google-ads-api": "^11.0.0",
    "googleapis": "^128.0.0",
    "rate-limit-redis": "^4.2.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-config-node": "^4.1.0",
    "mongodb-memory-server": "^9.1.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/globaltaxcalc/ad-service.git"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/tests/**"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}