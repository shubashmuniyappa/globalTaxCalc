# Environment Configuration
NODE_ENV=development
PORT=3000
APP_VERSION=2.0.0

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-complex
JWT_REFRESH_SECRET=your-refresh-secret-key-here
API_KEY_SECRET=your-api-key-secret-here

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://globaltaxcalc.com

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# IP Whitelist/Blacklist
IP_WHITELIST=127.0.0.1,::1
IP_BLACKLIST=

# Logging Configuration
LOG_LEVEL=info

# Cache Configuration
ENABLE_DEV_CACHE=true
CACHE_TTL_DEFAULT=300

# Load Balancer Configuration
LB_ALGORITHM=weighted-round-robin
LB_HEALTH_CHECK_INTERVAL=30000
LB_RETRY_ATTEMPTS=3

# Service Discovery
SERVICE_DISCOVERY_ENABLED=false
CONSUL_HOST=localhost
CONSUL_PORT=8500

# Monitoring Configuration
PROMETHEUS_ENABLED=true
METRICS_PATH=/metrics

# Documentation Configuration
DOCS_ENABLED=true
SWAGGER_UI_ENABLED=true

# External Services
NOTIFICATION_SERVICE_URL=http://localhost:3041
EMAIL_SERVICE_URL=http://localhost:3051

# Database URLs (for service connections)
AUTH_SERVICE_URL=http://localhost:3001
USER_SERVICE_URL=http://localhost:3021
CALCULATION_SERVICE_URL=http://localhost:3011
REPORT_SERVICE_URL=http://localhost:3031

# SSL/TLS Configuration (for production)
SSL_ENABLED=false
SSL_CERT_PATH=/etc/ssl/certs/api-gateway.crt
SSL_KEY_PATH=/etc/ssl/private/api-gateway.key

# CDN Configuration
CDN_ENABLED=false
CDN_URL=https://cdn.globaltaxcalc.com

# Feature Flags
ENABLE_GRAPHQL=true
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true
ENABLE_MONITORING=true
ENABLE_CIRCUIT_BREAKER=true

# Development Settings
DEBUG_MODE=false
ENABLE_SWAGGER_UI=true
ENABLE_DEV_ENDPOINTS=true