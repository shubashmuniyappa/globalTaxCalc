# Application Settings
APP_NAME="GlobalTaxCalc AI Service"
APP_VERSION="1.0.0"
DEBUG=false
ENVIRONMENT=production

# Server Settings
HOST=0.0.0.0
PORT=8003
WORKERS=1

# API Settings
API_PREFIX=/api/v1
DOCS_URL=/docs
REDOC_URL=/redoc
OPENAPI_URL=/openapi.json

# Security Settings
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,https://globaltaxcalc.com
ALLOWED_METHODS=*
ALLOWED_HEADERS=*

# Database Settings
MONGODB_URL=mongodb://localhost:27017
MONGODB_DATABASE=globaltaxcalc_ai

# Redis Settings
REDIS_URL=redis://localhost:6379
REDIS_DB=0
CACHE_TTL=3600

# AI Model Settings
HUGGINGFACE_TOKEN=your_huggingface_token_here
OPENAI_API_KEY=your_openai_api_key_here
MODEL_CACHE_DIR=./models

# Llama Model Settings
LLAMA_MODEL_NAME=microsoft/DialoGPT-medium
LLAMA_MAX_LENGTH=512
LLAMA_TEMPERATURE=0.7
LLAMA_TOP_P=0.9

# OpenAI Settings (Fallback)
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.7

# Voice Processing Settings
WHISPER_MODEL=base
MAX_AUDIO_DURATION=300
SUPPORTED_AUDIO_FORMATS=wav,mp3,m4a,flac

# Response Settings
MAX_RESPONSE_TIME=3.0
CONFIDENCE_THRESHOLD=0.7
MAX_SUGGESTIONS=5

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=json

# External Services
GEOLOCATION_SERVICE_URL=http://localhost:3001/api
TAX_ENGINE_SERVICE_URL=http://localhost:3002/api

# Production Settings
# Set these for production deployment
# HUGGINGFACE_TOKEN=hf_your_actual_token_here
# OPENAI_API_KEY=sk-your_actual_key_here
# MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/database
# REDIS_URL=redis://username:password@redis-host:6379
# SECRET_KEY=your_very_secure_secret_key_here