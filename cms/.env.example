# Environment Variables for GlobalTaxCalc CMS

# Database Configuration
DATABASE_CLIENT=postgres
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=globaltaxcalc_cms
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your_password_here
DATABASE_SSL=false

# For production with connection string
DATABASE_URL=postgresql://username:password@host:port/database

# Strapi Configuration
HOST=0.0.0.0
PORT=1337
PUBLIC_URL=http://localhost:1337

# Security Keys (Generate secure random strings for production)
APP_KEYS=key1,key2,key3,key4
ADMIN_JWT_SECRET=your_admin_jwt_secret
API_TOKEN_SALT=your_api_token_salt
TRANSFER_TOKEN_SALT=your_transfer_token_salt

# Admin Configuration
ADMIN_URL=/admin
SERVE_ADMIN=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_INTERVAL=60000
RATE_LIMIT_MAX=10

# Cloudinary Configuration (for media uploads)
CLOUDINARY_NAME=your_cloud_name
CLOUDINARY_KEY=your_api_key
CLOUDINARY_SECRET=your_api_secret

# SendGrid Configuration (for emails)
SENDGRID_API_KEY=your_sendgrid_api_key

# Documentation
DOCS_PASSWORD=your_docs_password

# Logging
LOG_LEVEL=debug

# Features
CRON_ENABLED=true
WEBHOOKS_POPULATE_RELATIONS=false

# Development/Production flags
NODE_ENV=development
IS_PROXIED=false
FLAG_NPS=true
FLAG_PROMOTE_EE=true