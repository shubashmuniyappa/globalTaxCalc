{
  "kind": "collectionType",
  "collectionName": "tool_descriptions",
  "info": {
    "singularName": "tool-description",
    "pluralName": "tool-descriptions",
    "displayName": "Tool Description",
    "description": "Descriptions and documentation for tax calculation tools"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "toolName": {
      "type": "string",
      "required": true,
      "maxLength": 100,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "slug": {
      "type": "uid",
      "targetField": "toolName",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "shortDescription": {
      "type": "text",
      "required": true,
      "maxLength": 200,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "fullDescription": {
      "type": "richtext",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "howToUse": {
      "type": "richtext",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "examples": {
      "type": "json",
      "required": false,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "featuredImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"],
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "screenshots": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["images"],
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "Income Tax Calculator",
        "Deduction Calculator",
        "Business Tax Calculator",
        "Property Tax Calculator",
        "Sales Tax Calculator",
        "Payroll Calculator",
        "Investment Calculator",
        "Retirement Calculator",
        "Comparison Tool",
        "Planning Tool"
      ],
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "difficulty": {
      "type": "enumeration",
      "enum": ["Beginner", "Intermediate", "Advanced"],
      "default": "Beginner",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "keywords": {
      "type": "text",
      "required": false,
      "maxLength": 500,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "supportedCountries": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::country.country",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "inputFields": {
      "type": "json",
      "required": false,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "outputFields": {
      "type": "json",
      "required": false,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "limitations": {
      "type": "richtext",
      "required": false,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "accuracy": {
      "type": "text",
      "required": false,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "lastUpdated": {
      "type": "datetime",
      "required": false,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "version": {
      "type": "string",
      "required": false,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "featured": {
      "type": "boolean",
      "required": false,
      "default": false,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "tags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tag.tag",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "relatedTools": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tool-description.tool-description",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "priority": {
      "type": "integer",
      "required": false,
      "min": 1,
      "max": 10,
      "default": 5,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "usageCount": {
      "type": "integer",
      "required": false,
      "default": 0,
      "min": 0,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    }
  }
}