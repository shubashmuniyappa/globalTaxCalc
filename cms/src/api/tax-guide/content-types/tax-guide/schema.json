{
  "kind": "collectionType",
  "collectionName": "tax_guides",
  "info": {
    "singularName": "tax-guide",
    "pluralName": "tax-guides",
    "displayName": "Tax Guide",
    "description": "Comprehensive tax guides for different countries and years"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 150,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "country": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::country.country",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "taxYear": {
      "type": "integer",
      "required": true,
      "min": 2020,
      "max": 2030,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "guideType": {
      "type": "enumeration",
      "enum": [
        "Individual",
        "Business",
        "Self-Employed",
        "Corporate",
        "Non-Resident",
        "Student",
        "Senior",
        "Expat"
      ],
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "description": {
      "type": "text",
      "required": true,
      "maxLength": 500,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "content": {
      "type": "richtext",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "featuredImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"],
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "attachments": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["files", "images"],
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "taxBrackets": {
      "type": "json",
      "required": false,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "standardDeduction": {
      "type": "decimal",
      "required": false,
      "min": 0,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "keyDeadlines": {
      "type": "json",
      "required": false,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "importantChanges": {
      "type": "richtext",
      "required": false,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "commonDeductions": {
      "type": "json",
      "required": false,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "taxCredits": {
      "type": "json",
      "required": false,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "filingRequirements": {
      "type": "richtext",
      "required": false,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "penaltiesAndInterest": {
      "type": "richtext",
      "required": false,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "lastUpdated": {
      "type": "datetime",
      "required": false,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "reviewedBy": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "admin::user",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "accuracy": {
      "type": "enumeration",
      "enum": ["Draft", "Reviewed", "Verified", "Official"],
      "default": "Draft",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "priority": {
      "type": "integer",
      "required": false,
      "min": 1,
      "max": 10,
      "default": 5,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "tags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tag.tag",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "tableOfContents": {
      "type": "json",
      "required": false,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    }
  }
}