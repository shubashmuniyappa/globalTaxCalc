{
  "kind": "collectionType",
  "collectionName": "countries",
  "info": {
    "singularName": "country",
    "pluralName": "countries",
    "displayName": "Country",
    "description": "Countries with tax calculation support"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true,
      "maxLength": 100,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "code": {
      "type": "string",
      "required": true,
      "unique": true,
      "minLength": 2,
      "maxLength": 3,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "currency": {
      "type": "string",
      "required": true,
      "minLength": 3,
      "maxLength": 3,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "flagImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"],
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "supportLevel": {
      "type": "enumeration",
      "enum": ["Full", "Partial", "Coming Soon", "Not Supported"],
      "default": "Coming Soon",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "taxAuthorityName": {
      "type": "string",
      "required": false,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "taxAuthorityWebsite": {
      "type": "string",
      "required": false,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "primaryLanguage": {
      "type": "string",
      "required": false,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "timeZone": {
      "type": "string",
      "required": false,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "featured": {
      "type": "boolean",
      "required": false,
      "default": false,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "priority": {
      "type": "integer",
      "required": false,
      "min": 1,
      "max": 10,
      "default": 5,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "region": {
      "type": "enumeration",
      "enum": [
        "North America",
        "South America",
        "Europe",
        "Asia",
        "Africa",
        "Oceania",
        "Middle East"
      ],
      "required": false,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    }
  }
}