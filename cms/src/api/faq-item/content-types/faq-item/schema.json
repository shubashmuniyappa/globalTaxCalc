{
  "kind": "collectionType",
  "collectionName": "faq_items",
  "info": {
    "singularName": "faq-item",
    "pluralName": "faq-items",
    "displayName": "FAQ Item",
    "description": "Frequently asked questions about taxes and tools"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "question": {
      "type": "text",
      "required": true,
      "maxLength": 300,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "answer": {
      "type": "richtext",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::faq-category.faq-category",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "priority": {
      "type": "integer",
      "required": false,
      "min": 1,
      "max": 10,
      "default": 5,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "featured": {
      "type": "boolean",
      "required": false,
      "default": false,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "keywords": {
      "type": "text",
      "required": false,
      "maxLength": 500,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "relatedCountries": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::country.country",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "relatedTopics": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tag.tag",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "helpfulVotes": {
      "type": "integer",
      "required": false,
      "default": 0,
      "min": 0,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "totalVotes": {
      "type": "integer",
      "required": false,
      "default": 0,
      "min": 0,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "lastUpdated": {
      "type": "datetime",
      "required": false,
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "reviewedBy": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "admin::user",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "shortAnswer": {
      "type": "text",
      "required": false,
      "maxLength": 150,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "difficulty": {
      "type": "enumeration",
      "enum": ["Basic", "Intermediate", "Advanced"],
      "default": "Basic",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "relatedLinks": {
      "type": "json",
      "required": false,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    }
  }
}