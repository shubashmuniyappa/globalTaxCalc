{
  "collectionName": "components_shared_meta_socials",
  "info": {
    "displayName": "Meta Social",
    "description": "Social media metadata for Open Graph and Twitter cards",
    "icon": "share"
  },
  "options": {},
  "attributes": {
    "socialNetwork": {
      "type": "enumeration",
      "enum": ["Facebook", "Twitter", "LinkedIn"],
      "required": true
    },
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 60
    },
    "description": {
      "type": "string",
      "required": true,
      "maxLength": 160
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "card": {
      "type": "enumeration",
      "enum": ["summary", "summary_large_image", "app", "player"],
      "default": "summary"
    }
  }
}