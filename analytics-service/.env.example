# Server Configuration
PORT=3006
HOST=0.0.0.0
NODE_ENV=development

# ClickHouse Configuration
CLICKHOUSE_URL=http://localhost:8123
CLICKHOUSE_USERNAME=default
CLICKHOUSE_PASSWORD=
CLICKHOUSE_DATABASE=analytics

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Analytics Configuration
SESSION_TIMEOUT=1800
EVENTS_RETENTION_DAYS=730
SESSIONS_RETENTION_DAYS=730
CONVERSIONS_RETENTION_DAYS=1825
EXPERIMENTS_RETENTION_DAYS=365

# Sampling Rates (0.0 to 1.0)
EVENT_SAMPLING_RATE=1.0
SESSION_SAMPLING_RATE=1.0
EXPERIMENT_SAMPLING_RATE=1.0

# A/B Testing Configuration
AB_TEST_DEFAULT_DURATION=30
AB_TEST_MIN_SAMPLE_SIZE=1000
AB_TEST_CONFIDENCE_LEVEL=0.95
AB_TEST_MAX_CONCURRENT=10

# Privacy Configuration
DELETION_BATCH_SIZE=1000
DELETION_RETRY_ATTEMPTS=3

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=

# External Services
GEOIP_ENABLED=true
GEOIP_PROVIDER=geoip-lite

# Security
JWT_SECRET=your-super-secret-jwt-key-here
API_KEY=your-api-key-for-external-access

# Monitoring
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true