# Server Configuration
NODE_ENV=development
PORT=3003
HOST=0.0.0.0

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/geolocation_service?retryWrites=true&w=majority
MONGODB_DB_NAME=geolocation_service

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=3

# GeoIP Configuration
MAXMIND_LICENSE_KEY=your_maxmind_license_key
MAXMIND_USER_ID=your_maxmind_user_id
GEOIP_DATABASE_PATH=./data/geoip/GeoLite2-City.mmdb
UPDATE_GEOIP_DATABASE=true

# API Keys and External Services
EXCHANGE_RATES_API_KEY=your_exchange_rates_api_key
GOVERNMENT_API_KEYS={}

# Security
JWT_SECRET=your_jwt_secret_key_change_in_production
BCRYPT_ROUNDS=12
API_KEY_SECRET=your_api_key_secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Caching
CACHE_TTL_LOCATION=3600
CACHE_TTL_TAX_RULES=86400
CACHE_TTL_EXCHANGE_RATES=3600
CACHE_TTL_COUNTRIES=604800

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined
ENABLE_REQUEST_LOGGING=true

# Data Update Schedules (cron format)
UPDATE_EXCHANGE_RATES_CRON=0 */6 * * *
UPDATE_TAX_RULES_CRON=0 2 * * 0
CLEANUP_CACHE_CRON=0 1 * * *

# Performance
COMPRESSION_LEVEL=6
TRUST_PROXY=false
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Health Check
HEALTH_CHECK_INTERVAL=30000
MONGODB_HEALTH_TIMEOUT=5000
REDIS_HEALTH_TIMEOUT=3000