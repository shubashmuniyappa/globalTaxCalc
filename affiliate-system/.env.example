# Environment Configuration
NODE_ENV=development
PORT=3000
APP_VERSION=1.0.0

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/affiliate_system
DB_HOST=localhost
DB_PORT=5432
DB_NAME=affiliate_system
DB_USER=username
DB_PASSWORD=password
DB_SSL=false

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-complex
JWT_REFRESH_SECRET=your-refresh-secret-key-here
API_KEY_SECRET=your-api-key-secret-here
ENCRYPTION_KEY=your-32-character-encryption-key

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://globaltaxcalc.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Payment Configuration
MINIMUM_PAYOUT_THRESHOLD=50.00
PAYMENT_SCHEDULE=monthly

# PayPal Configuration
PAYPAL_MODE=sandbox
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@globaltaxcalc.com
FROM_NAME=GlobalTaxCalc Affiliate Program

# Tracking Configuration
TRACKING_BASE_URL=https://track.globaltaxcalc.com
TRACKING_COOKIE_DOMAIN=.globaltaxcalc.com
ATTRIBUTION_WINDOW_DAYS=30

# CDN Configuration
CDN_BASE_URL=https://cdn.globaltaxcalc.com
CDN_ENABLED=false

# Fraud Detection
HIGH_RISK_COUNTRIES=
FRAUD_SCORE_THRESHOLD=0.7
BLOCK_SCORE_THRESHOLD=0.8

# Compliance Configuration
FTC_DISCLOSURE_REQUIRED=true
GDPR_COMPLIANCE_ENABLED=true
AUDIT_RETENTION_DAYS=365

# Notification Configuration
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=

# Development Settings
DEBUG_MODE=false
LOG_LEVEL=info
ENABLE_SWAGGER=true

# External APIs
GEOIP_API_KEY=
FRAUD_API_KEY=
TAX_FORM_API_KEY=

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# Cache Configuration
CACHE_TTL_DEFAULT=300
CACHE_TTL_ANALYTICS=60
CACHE_TTL_REPORTS=3600

# Background Jobs
ENABLE_BACKGROUND_JOBS=true
JOB_CONCURRENCY=5
JOB_RETRY_ATTEMPTS=3

# Monitoring
PROMETHEUS_ENABLED=true
METRICS_PATH=/metrics
HEALTH_CHECK_ENABLED=true


# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
S3_BUCKET=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_REGION=us-east-1