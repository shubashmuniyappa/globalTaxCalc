# Production Environment Variables for Railway.app Deployment
# Copy this file to Railway environment variables or use Railway CLI

# === CORE APPLICATION SETTINGS ===
NODE_ENV=production
DOMAIN=globaltaxcalc.com
APP_NAME=GlobalTaxCalc
APP_VERSION=1.0.0

# === DATABASE CONFIGURATION ===
# PostgreSQL (Railway will provide DATABASE_URL)
DATABASE_URL=
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=20
DATABASE_SSL=true
DATABASE_TIMEOUT=30000

# === REDIS CONFIGURATION ===
# Redis (Railway will provide REDIS_URL)
REDIS_URL=
REDIS_PASSWORD=
REDIS_TTL=3600
REDIS_MAX_CONNECTIONS=50

# === SECURITY CONFIGURATION ===
JWT_SECRET=
API_KEY=
ENCRYPTION_KEY=
HASH_SALT_ROUNDS=12

# === CORS CONFIGURATION ===
CORS_ORIGINS=https://globaltaxcalc.com,https://www.globaltaxcalc.com,https://app.globaltaxcalc.com

# === RATE LIMITING ===
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=1000
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# === EMAIL CONFIGURATION ===
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
FROM_EMAIL=noreply@globaltaxcalc.com

# === OAUTH PROVIDERS ===
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=

# === EXTERNAL API KEYS ===
# Tax Authority APIs
IRS_API_KEY=
CRA_API_KEY=
HMRC_API_KEY=
BUNDESFINANZMINISTERIUM_API_KEY=

# === CLOUD STORAGE ===
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=globaltaxcalc-storage

# === MONITORING & LOGGING ===
SENTRY_DSN=
SENTRY_ENVIRONMENT=production
SENTRY_SAMPLE_RATE=0.1

# === ALERTING ===
SLACK_WEBHOOK_URL=
PAGERDUTY_INTEGRATION_KEY=
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=

# === ANALYTICS ===
GA_ID=
HOTJAR_ID=
MIXPANEL_TOKEN=

# === PAYMENT PROCESSING ===
STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# === FEATURE FLAGS ===
ENABLE_BETA_FEATURES=false
ENABLE_CHAT_SUPPORT=true
ENABLE_DARK_MODE=true
ENABLE_NOTIFICATIONS=true

# === PERFORMANCE SETTINGS ===
MAX_FILE_SIZE=104857600
MAX_REQUEST_SIZE=10485760
CACHE_TTL=3600
SESSION_TIMEOUT=86400000

# === CLOUDFLARE CONFIGURATION ===
CLOUDFLARE_API_TOKEN=
CLOUDFLARE_ZONE_ID=
CLOUDFLARE_ACCOUNT_ID=

# === BACKUP CONFIGURATION ===
BACKUP_ENABLED=true
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=globaltaxcalc-backups

# === COMPLIANCE & SECURITY ===
GDPR_COMPLIANCE_ENABLED=true
CCPA_COMPLIANCE_ENABLED=true
AUDIT_LOGGING_ENABLED=true
ENCRYPTION_AT_REST_ENABLED=true

# === CDN CONFIGURATION ===
CDN_URL=https://cdn.globaltaxcalc.com
STATIC_ASSETS_URL=https://assets.globaltaxcalc.com

# === WEBSOCKET CONFIGURATION ===
WEBSOCKET_ENABLED=true
WEBSOCKET_PORT=3007
WEBSOCKET_ORIGINS=https://globaltaxcalc.com,https://app.globaltaxcalc.com

# === HEALTH CHECK CONFIGURATION ===
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=10000
HEALTH_CHECK_RETRIES=3

# === SCALING CONFIGURATION ===
MIN_REPLICAS=2
MAX_REPLICAS=10
TARGET_CPU_UTILIZATION=80
TARGET_MEMORY_UTILIZATION=85

# === LOGGING CONFIGURATION ===
LOG_LEVEL=info
LOG_FORMAT=json
LOG_RETENTION_DAYS=30
LOG_AGGREGATION_ENABLED=true

# === MAINTENANCE MODE ===
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="GlobalTaxCalc is temporarily down for maintenance. Please try again later."

# === API VERSIONING ===
API_VERSION=v1
SUPPORTED_API_VERSIONS=v1

# === LOCALIZATION ===
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de,it,pt,ja,zh
DEFAULT_CURRENCY=USD
DEFAULT_TIMEZONE=UTC

# === SEARCH CONFIGURATION ===
ELASTICSEARCH_URL=
ELASTICSEARCH_INDEX=globaltaxcalc
SEARCH_ENABLED=true

# === QUEUE CONFIGURATION ===
QUEUE_REDIS_URL=
QUEUE_CONCURRENCY=5
QUEUE_MAX_ATTEMPTS=3

# === CONTENT DELIVERY ===
IMAGE_OPTIMIZATION_ENABLED=true
COMPRESSION_ENABLED=true
MINIFICATION_ENABLED=true

# === THIRD-PARTY INTEGRATIONS ===
INTERCOM_APP_ID=
ZENDESK_SUBDOMAIN=
HUBSPOT_API_KEY=

# === DEVELOPMENT TOOLS (disabled in production) ===
DEBUG_MODE=false
PROFILING_ENABLED=false
HOT_RELOAD_ENABLED=false

# === CUSTOM DOMAIN CONFIGURATION ===
CUSTOM_DOMAIN_ENABLED=true
SSL_CERT_AUTO_RENEWAL=true
FORCE_HTTPS=true

# === WEBHOOK CONFIGURATION ===
WEBHOOK_SECRET=
WEBHOOK_TIMEOUT=30000
WEBHOOK_RETRIES=3