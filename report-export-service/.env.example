# Server Configuration
PORT=3003
NODE_ENV=development
HOST=localhost

# Report Service Settings
MAX_REPORT_SIZE_MB=50
CONCURRENT_REPORTS=5
REPORT_TIMEOUT_MS=30000
TEMP_DIR=./temp
REPORTS_DIR=./reports

# PDF Generation Settings
PUPPETEER_EXECUTABLE_PATH=
PDF_QUALITY=high
PDF_FORMAT=A4
PDF_MARGIN=20mm
CHART_RENDER_TIMEOUT=5000

# Branding Configuration
COMPANY_NAME="GlobalTaxCalc"
COMPANY_LOGO_PATH=./assets/logos/company-logo.png
DEFAULT_BRAND_COLOR=#2563eb
WATERMARK_ENABLED=true
PREMIUM_WATERMARK_DISABLED=true

# Font Configuration
FONT_PRIMARY="Inter"
FONT_SECONDARY="Roboto"
FONT_MONOSPACE="JetBrains Mono"
CUSTOM_FONTS_DIR=./assets/fonts

# Localization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr,de,it
DEFAULT_CURRENCY=USD
DEFAULT_TIMEZONE=America/New_York
RTL_LANGUAGES=ar,he,fa

# Export Settings
CSV_DELIMITER=,
CSV_ENCODING=utf8
EXCEL_SHEET_NAME="Tax Report"
EXCEL_PASSWORD_PROTECTED=false
JSON_PRETTY_PRINT=true

# Redis Cache (optional)
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=false
CACHE_TTL_HOURS=24

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,https://globaltaxcalc.com
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# Security
API_KEY_REQUIRED=false
API_KEY=
JWT_SECRET=your-jwt-secret-key
TRUSTED_PROXIES=127.0.0.1,::1

# Monitoring
LOG_LEVEL=info
LOG_FORMAT=combined
ENABLE_METRICS=true

# File Upload
MAX_UPLOAD_SIZE_MB=10
UPLOAD_DIR=./uploads
ALLOWED_EXTENSIONS=.json,.csv,.xlsx